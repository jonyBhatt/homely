// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

type Address {
    street String
    city   String
    state  String
    zip    String
}

model User {
    id      String   @id @default(auto()) @map("_id") @db.ObjectId
    email   String   @unique
    name    String?
    address Address?

    @@map("users")
}
