// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

type Address {
    street String
    city   String
    state  String
    zip    String
}

enum UserRole {
    Admin
    Landlord
    User
}

model User {
    id       String   @id @default(auto()) @map("_id") @db.ObjectId
    email    String   @unique
    name     String?
    address  Address?
    password String?
    role     UserRole @default(User)

    @@map("users")
}
